containers: {
    app: {
        build: {
            context: "./"
            dockerfile: "./Dockerfile"
        }
        ports: publish: "80/http"
        dirs: {
            "/var/lib/mysql": "mysqldata"
        }
    }
}

volumes: mysqldata: {
    size: "1Gi"
    accessModes: "readWriteOnce"
}